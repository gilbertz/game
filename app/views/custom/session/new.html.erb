<style type="text/css">
  body {
    padding-bottom: 40px;
    padding-top: 40px;
    background-color: #f5f5f5;
  }

  .form-signin {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }
  .form-signin .form-signin-heading,
  .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
  }
</style>
<div class="container">
  <%= form_tag '/custom/session', class: 'form-signin' do %>
    <h2 class="form-signin-heading">游戏后台登陆</h2>
    <%= text_field_tag :name, nil, class: "input-block-level", placeholder: "名称" %>
    <%= password_field_tag :password, nil, class: "input-block-level", placeholder: "密码" %>
    <label class="checkbox">
      <input type="checkbox" name="remember" value="1"> 记住我
    </label>
    <button class="btn btn-large btn-primary" type="submit">登入</button>
  <% end %>
</div>
